{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".eslintrc.json",
    "./metro.config.js"
  ]
}
